html{
    margin: 0;
    padding: 0;
    font-family: Roboto, sans-serif;
    font-size: 16px;
    scroll-behavior: smooth;
/* premenne*/
    --header-height: 50px;
    --footer-height: 30px;
    --highlight: rgb(255, 188, 42);
    --highlight2:rgb(255, 253, 237);
}
header{
    height: var(--header-height);
    background-color: rgb(17, 3, 48);
    text-align: center;
    line-height: var(--header-height);
}
.nav_link{
    color: var(--highlight2);
    text-decoration: none;
    font-family: Roboto, sans-serif;
    font-size: 16px;
    line-height: 20px;
    padding: 0 10px;
}
.nav_link:hover, .active{
    color: var(--highlight);
}
/*
main{
    height: calc(100vh - var(--header-height) - var(--footer-height));
}
    */
.container{
    max-width: 1140px;
    min-width: 300px;
    margin: 0 auto ;
}
.section{
    padding: 10px 20px;
}
.section:not(:last-child)::after{
    content: "";
    display: block;
    height: 4px;
    width: 80%;
    background-color:var(--highlight) ;
    margin: 20px auto 0;
}
h2{
    font-family: Roboto, sans-serif;
    color: var(--highlight);
}
p{
    text-align: justify;
    padding: 0 20px;
}
footer{
    height: var(--footer-height);
     background-color:rgb(17, 3, 48);
     text-align: center;
     line-height: var(--footer-height);
     color:var(--highlight2);
}
